  section#book-a-table.book-a-table
    .container
      .section-title
        h2
          | Registration 
          span form
      form.send-message-form(action='/api/v2/users/signup' method='post' role='form')
        .form-row
          .col-md-4.form-group
            select.custom-select(name='role' required)
              option(selected='none') User type *
              option(value='customer') Customer
              option(value='vendor') Vendor
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="name" placeholder="Your name *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="tel" name="mobile" placeholder="Your mobile number *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="email" name="email" placeholder="Your email *" required)
            .validate
          .col-md-4.form-group
            input#email.form-control(type='text' name='addressLine1' placeholder='Address line 1 *' required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="addressLine2" placeholder="Address line 2 *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="addressLine3" placeholder="Address line 3 *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="number" name="pinCode" placeholder="Pin code *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="landMark" placeholder="Land mark *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="locality" placeholder="Locality *" required)
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="aadhaar" placeholder="Your aadhaar number")
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="companyName" placeholder="Your company name (If you are a vendor)")
            .validate
          .col-md-4.form-group
            input#phone.form-control(type="text" name="gstin" placeholder="Your GSTIN (If you are a vendor)")
            .validate
        
        .mb-3
          .loading Loading
          .error-message
          .sent-message
            | You have registered successfully, Thank you!
        .text-center
          button.btn.btn-warning(type='submit') Register
