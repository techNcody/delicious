      i.icofont-user-alt-4
      |  Hello #{userName.split(' ')[0]}
// ======= Header =======
header#header.fixed-top.d-flex.align-items-center.header-transparent
  .container.d-flex.align-items-center
    .logo.mr-auto
      h1.text-light
        if (role !== 'admin')
          a(href='/')
            span feellikehome
        else 
          a(href='/')
            span feellikehome Admin
      // Uncomment below if you prefer to use an image logo
      // <a href="home.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>
    nav.nav-menu.d-none.d-lg-block
      ul
        li.active
          a(href='/') Home
        if (role !== 'admin')
          li
            a(href='#menu') Menu
        if (userName && (role !== 'admin') && (requestStatus === 'approved'))
          li
            a(href='#subscription') Subscription
        if (role !== 'admin')
          li
            a(href='#contact') Contact
          li
            a(href='#about') About
        if (userName && (role !== 'admin') && !request)
          li.book-a-table.text-center
            a(href='/subscription') Subscribe a Meal
        else if (!userName)
          li.book-a-table.text-center
            a(href='/login') Login to Subscribe
        else if (userName && (role === 'admin'))
          li.book-a-table.text-center
            a(href='/approveSubscription') Approve Subscription
        if userName
          li.book-a-table.text-center
            a(href='#' onclick='logout()').logout-btn Logout
        //- else
        //-   li.book-a-table.text-center
        //-     a(href='/login').login-btn Login
    // .nav-menu
// End Header
// ======= Hero Section =======
section#hero
  .hero-container
    #heroCarousel.carousel.slide.carousel-fade(data-ride='carousel')
      ol#hero-carousel-indicators.carousel-indicators
      .carousel-inner(role='listbox')
        // Slide 1
        .carousel-item.active(style='background: url();')
          .carousel-container
            .carousel-content
              h2.animate__animated.animate__fadeInDown
                span feel like
                |  home
              p.animate__animated.animate__fadeInUp The online home made meal subscription platform
              div
                a.btn-margin-top.btn-menu.animate__animated.animate__fadeInUp.scrollto(href='#menu') Our Menu
                |
                if (role !== 'admin')
                  if (userName  && !request)
                    a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/subscription') Subscribe a meal
                  else if (!userName)
                    a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/login') Login to Subscribe
                else if (role === 'admin')
                  a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/approveSubscription') Approve Subscription
        // Slide 2
        .carousel-item(style='background: url();')
          .carousel-container
            .carousel-content
              h2.animate__animated.animate__fadeInDown Welcome to feellikehome.com
              p.animate__animated.animate__fadeInUp The online home made meal subscription platform
              div
                a.btn-margin-top.btn-menu.animate__animated.animate__fadeInUp.scrollto(href='#menu') Our Menu
                if (role !== 'admin')
                  if (userName  && !request)
                    a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/subscription') Subscribe a meal
                  else if (!userName)
                    a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/login') Login to Subscribe
                else if (role === 'admin') 
                  a.btn-margin-top.btn-book.animate__animated.animate__fadeInUp.scrollto(href='/approveSubscription') Approve Subscription
      a.carousel-control-prev(href='#heroCarousel' role='button' data-slide='prev')
        span.carousel-control-prev-icon.icofont-simple-left(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#heroCarousel' role='button' data-slide='next')
        span.carousel-control-next-icon.icofont-simple-right(aria-hidden='true')
        span.sr-only Next
