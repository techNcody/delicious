  section#book-a-table.book-a-table
    .container
      .section-title
        h2
          | Send a Message to 
          span Subscribe your Meal
        // <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
      form.php-email-form(action='forms/book-a-table.php' method='post' role='form')
        .form-row
          .col-lg-4.col-md-6.form-group
            input#name.form-control(type='text' name='name' placeholder='Your Name' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
            .validate
          .col-lg-4.col-md-6.form-group
            input#email.form-control(type='email' name='email' placeholder='Your Email' data-rule='email' data-msg='Please enter a valid email')
            .validate
          .col-lg-4.col-md-6.form-group
            input#phone.form-control(type='text' name='phone' placeholder='Your Phone' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
            .validate
          .col-lg-4.col-md-6.form-group
            input#date.form-control(type='text' name='date' placeholder='Date' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
            .validate
          .col-lg-4.col-md-6.form-group
            input#time.form-control(type='text' name='time' placeholder='Time' data-rule='minlen:4' data-msg='Please enter at least 4 chars')
            .validate
          .col-lg-4.col-md-6.form-group
            input#people.form-control(type='number' name='people' placeholder='# of people' data-rule='minlen:1' data-msg='Please enter at least 1 chars')
            .validate
        .form-group
          textarea.form-control(name='message' rows='5' placeholder='Message')
          .validate
        .mb-3
          .loading Loading
          .error-message
          .sent-message
            | Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!
        .text-center
          button(type='submit') Send Message

